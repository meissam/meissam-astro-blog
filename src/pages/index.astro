---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import { sortMDByDate, getPostsByCategory } from "@/data/post";
import { Categories } from "@/site-config";
import PageLayout from "@/layouts/Base.astro";

const MAX_POSTS = 5;
const allNotes = sortMDByDate(await getPostsByCategory(Categories.Note)).slice(0, MAX_POSTS);
const allPhotos = sortMDByDate(await getPostsByCategory(Categories.Photo)).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hi ðŸ‘‹. I'm Meissam.</h1>
		<p class="mb-4">
			A software engineer with a keen interest in art, culture, and science, welcome to my personal
			blog. Here, you'll discover my thoughts on software engineering, leadership, and beyond, along
			with some of my personal notes.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl capitalize">{Categories.Note}</h2>
		<ul class="space-y-4">
			{
				allNotes.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
						{/* @ts-ignore-next-line - issue with -> @astrojs/check@0.9.3 */}
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl capitalize">{Categories.Photo}</h2>
		<ul class="space-y-4">
			{
				allPhotos.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
						{/* @ts-ignore-next-line - issue with -> @astrojs/check@0.9.3 */}
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
