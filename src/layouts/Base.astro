---
import BaseHead from "@/components/BaseHead.astro";
import SkipLink from "@/components/SkipLink.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import { siteConfig } from "@/site-config";
import type { SiteMeta } from "@/types";

interface Props {
	meta: SiteMeta;
}

const {
	meta: { articleDate, description = siteConfig.description, title },
} = Astro.props;
---

<html class="scroll-smooth" lang={siteConfig.lang} dir="rtl">
	<head>
		<BaseHead articleDate={articleDate} description={description} title={title} />
	</head>

	<body class="min-h-screen bg-bgColor font-serif text-textColor antialiased">
		<div class="mx-auto max-w-4xl px-4 pt-16">
			<div class="grid grid-cols-1 gap-6 sm:auto-rows-min sm:grid-cols-3">
				<!-- Sidebar (Header) -->
				<aside class="p-4 sm:sticky sm:top-16 sm:col-span-1 sm:h-[80vh] sm:self-start">
					<ThemeProvider />
					<SkipLink />
					<Header />
				</aside>

				<!-- Main Content -->
				<main id="main" class="prose prose-cactus sm:col-span-3">
					<slot />
				</main>

				<!-- Footer -->
				<div
					class="text-muted col-span-1 mt-12 border-t border-zinc-300 text-center text-xs dark:border-zinc-700 sm:col-span-4 sm:row-start-2"
				>
					<Footer />
				</div>
			</div>
		</div>
	</body>
</html>
