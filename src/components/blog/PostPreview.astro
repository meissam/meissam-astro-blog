---
import type { CollectionEntry } from "astro:content";
import { getPostSortDate } from "@/data/post";
import type { HTMLTag, Polymorphic } from "astro/types";
import FormattedDate from "../FormattedDate.astro";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
	post: CollectionEntry<"post">;
	withDesc?: boolean;
};

const { as: Tag = "div", post, withDesc = false } = Astro.props;
const postDate = getPostSortDate(post);
---

<div class="flex items-center gap-4">
	<Tag class="m-0">
		{post.data.draft && <span class="text-red-500">(پیش‌نویس)</span>}
		<a
			href={`/${post.slug}/`}
			class="text-md cactus-link font-bold no-underline"
			data-astro-prefetch
		>
			{post.data.title}
		</a>
	</Tag><FormattedDate class="text-gray-600 dark:text-gray-400" date={postDate} />
</div>

{
	withDesc && (
		<p class="mt-0 line-clamp-3 italic text-zinc-500 dark:text-zinc-400">{post.data.description}</p>
	)
}
