---
import { getAllPosts, getUniqueTagsWithCount } from "@/data/post";
import { convertToPersianDigits } from "@/utils/toPersianDigits";

const allPosts = await getAllPosts();
const allTags = getUniqueTagsWithCount(allPosts);
---

<div>
	<p class="title mb-6 text-base">برچسب‌ها</p>
	<ul class="space-y-4 p-0">
		{
			allTags.map(([tag, val]) => (
				<li class="flex items-center gap-x-2">
					<a
						class="cactus-link inline-block"
						data-astro-prefetch
						href={`/tags/${tag}/`}
						title={`View posts with the tag: ${tag}`}
					>
						&#35;{tag}
					</a>
					<span class="inline-block">- {convertToPersianDigits(val)}</span>
				</li>
			))
		}
	</ul>
</div>
